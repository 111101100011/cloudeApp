/**index.wxss**/
@import "../template/template.wxss";

.index-page {
  height: 100%;
  width: 100%;
  padding: 0 29rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  overflow: hidden;
}

/* 公共 */
text, image {
  display: block;
}

.more {
  padding: 25rpx 0 45rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  background: none;
}


/* 搜索 */
.search {
  margin-bottom: 20rpx;
  width: 100%;
  height: 55rpx;
  line-height: 55rpx;
  border: 1rpx solid #dadada;
  border-radius: 30rpx;
  font-size: 25rpx;
  text-align: center;
  background: #fafafa url("http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png") no-repeat 160rpx center;
  background-size: 24rpx;
  color: #999;
}


/* banner */
.banner,
.banner-swiper,
.banner-item,
.banner-image {
  width: 100%;
  height: 340rpx;
  border-radius: 8px;
  overflow: hidden;
}


/* 标题 */
.title {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
}
.title-name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.title-more {
  display: block;
  width: 32rpx;
  height: 32rpx;
}
.title-limit {
  display: flex;
  align-items: center;
}
.title-limit-time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
  align-items: center;
}
.title-limit-time text {
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #333;
  border-radius: 8rpx;
  margin: 0 15rpx;
}

/* 活动豆腐块 */
.hot {
  padding: 30rpx 0;
}
.hot-r1 {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #dadada;
}
.hot-r1-item {
  width: 225rpx;
  height: 278rpx;
  overflow: hidden;
  position: relative;
  border-radius: 8rpx;
}
.hot-r1-item:nth-of-type(1) {
  background: #f5f9ff;
}
.hot-r1-item:nth-of-type(2) {
  background: #fffaf9;
}
.hot-r1-item:nth-of-type(3) {
  background: #fdfcf2;
}
.hot-r1-item image {
  width: 100%;
  height: 100%;
  margin-top: -30rpx;
}
.hot-r1-item text {
  position: absolute;
  bottom: 30rpx;
  width: 100%;
  text-align: center;
  z-index: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.hot-r2 {
  height: 125rpx;
  margin-bottom: 10rpx;
}
.hot-r2 image {
  width: 100%;
}
.hot-r3 {
  display: flex;
  justify-content: space-between;
  height: 264rpx;
  overflow: hidden;
}
.hot-r3-lt {
  width: 432rpx;
  height: 100%;
  background: #fef8e7;
  border-radius: 8rpx;
}
.hot-r3-title {
  padding: 40rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
}
.hot-r3-coupon {
  background: url(http://yanxuan.nosdn.127.net/c9b2668b0b4c5f41984569ddd1f62323.png?imageView&quality=75) no-repeat left center;
  background-size: 186rpx;
  padding-left: 186rpx;
  padding-top: 10rpx;
}
.hot-r3-tit {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1;
}
.hot-r3-btn {
  font-size: 22rpx;
  color: #666;
}
.hot-r3-rt {
  width: 254rpx;
  height: 100%;
  background: #fef8e7;
  border-radius: 8rpx;
}
.hot-r3-discount {
  background: url(http://yanxuan.nosdn.127.net/cf3bf8a85532b4b893427405b24ee581.png) no-repeat 30rpx -50rpx;
  background-size: 175rpx;
  padding-top: 10rpx;
}
.hot-r3-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #ef9134;
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
  color: #fff;
  margin-left: 142rpx;
}
.hot-r3-price {
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 2rpx;
  line-height: 1;
}
.hot-r3-history {
  font-size: 18rpx;
  text-decoration: line-through;
}

/* 特价商品 & 活动推荐标题 */
.limit-title,
.special-title {
  border-top: 21rpx solid #f4f4f4;
  margin: 0 -29rpx;
  padding: 29rpx 15rpx 29rpx 29rpx;
}

/* 推荐标题 */
.recommend-title {
  justify-content: center;
  border-top: 21rpx solid #f4f4f4;
  margin: 0 -29rpx;
}
