/**cart.wxss**/
.prolist-section {
  width: 100%;
  overflow: hidden;
}
.menu {
  white-space: nowrap;
  width: 100%;
  color: #333;
  font-size: 30rpx;
  padding: 20rpx 23rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
  height: 67rpx;
}
.menu-item {
  padding:15rpx 12rpx 10rpx;
  margin-right:25rpx;
  display:inline-block;
}
.menu-item-current {
  border-bottom: 3rpx solid #b32c2e;
}
.content {
  padding: 0 30rpx;
  margin-top: 60rpx;
}
.intro {
  color: #333;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  text-align: center;
  display: block;
}
/* 公共产品 */
.product-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.product-section .product-item {
  width: 332rpx;
  margin-bottom: 55rpx;
}
.product-section .product-item .product-pic {
  height: 332rpx;
  width: 100%;
  border-radius: 8rpx;
  background: #f4f4f4;
}
.product-section .product-item .product-info {
  padding-top: 24rpx;
}
.product-section .product-item .product-info .label {
  display: flex;
}
.product-section .product-item .product-info .label .label-item{
  padding: 7rpx 20rpx;
  margin-right: 5rpx;
  line-height: 1;
  font-size: 18rpx;
  color: #fff;
  background: #d7817d;
  border-radius: 4rpx;
  letter-spacing: 1rpx;
}
.product-section .product-item .product-info .product-title{
  line-height: 1;
  padding: 15rpx 0;
  font-size: 26rpx;
  color: #333;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.product-section .product-item .product-info .price {
  display: flex;
  align-items: center;
  line-height: 1;
}
.product-section .product-item .product-info .price .price-now {
  font-size: 24rpx;
  color: #000;
  font-weight: bold;
  margin-right: 15rpx;
}
.product-section .product-item .product-info .price .price-history {
  font-size: 20rpx;
  color: #999;
  text-decoration: line-through;
}
